<%- include ('partials/meta') -%>

<body>

    <%- include ('partials/navbar') -%>

    <div class="container" style="margin-bottom: 60px;">

        <%- include ('partials/msg') -%>

        <form method="POST" id="user-edit-form" action="/user/<%= user.id %>/edit" class="col-lg-8 col-md-12" enctype="multipart/form-data" onsubmit="return updateValidation()">
            <h1 class="mt-4">Update Your Profile</h1>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input disabled class="form-control" value="<%= user.email %>" name="email" id="email">
                <div id="email-fb"></div>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input disabled class="form-control" value="<%= user.username %>" name="username" id="username">
                <div id="username-fb"></div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <div class="mb-3">
                        <label for="first-name" class="form-label">First Name</label>
                        <input class="form-control" value="<%= user.first_name %>" name="first_name" id="first-name">
                        <div id="firstname-fb"></div>
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <div class="mb-3">
                        <label for="last-name" class="form-label">Last Name</label>
                        <input class="form-control" value="<%= user.last_name %>" name="last_name" id="last-name">
                        <div id="lastname-fb"></div>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" autofocus class="form-control" value="<%= user.password %>" name="password" id="password">
                <div id="password-fb"></div>
            </div>
            <div class="mb-3">
                <label for="confirm-password" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" name="confirm_password" id="confirm-password">
                <div id="confirm-password-fb"></div>
            </div>
            <div class="form-group">
              <label for="profile-pic">Profile Picture</label>
              <input type="file" onchange="pictureUpload()" class="form-control-file" id="profile-pic" name="profile">
              <div id="profile-pic-fb"></div>
            </div>
            <div id="preview" style="visibility: hidden;">
                <label class="form-label" id='preview-label'>Preview</label>
                <br>
                <img src="" id="uploaded-img"/>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>

    <%- include ('partials/footer') -%>

    <%- include ('partials/scripts') -%>

</body>

</html>