<%- include ('partials/meta') -%>

<body>

    <%- include ('partials/navbar') -%>

    <div class="container">

        <%- include ('partials/msg') -%>

        <div class="mt-4">
            <form method="POST" action="/group/create" class="col-lg-8 col-md-12" enctype="multipart/form-data"
                onsubmit="return groupValidation()">
                <h1 class="mt-4">Create a New Group</h1>
                <div class="mb-3">
                    <label for="email" class="form-label">Name</label>
                    <input class="form-control" name="name" id="name">
                    <div id="name-fb"></div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="description" id="description"></textarea>
                    <div id="description-fb"></div>
                </div>
                <div class="form-group">
                  <label for="group-pic">Group Photo</label>
                  <input type="file" onchange="pictureUpload()" class="form-control-file" id="group-pic" name="group_pic">
                  <div id="img-fb"></div>
                </div>
                <div id="preview" style="visibility: hidden;">
                    <label class="form-label" id='preview-label'>Preview</label>
                    <br>
                    <img src="" id="uploaded-img"/>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>

    <%- include ('partials/footer') -%>

    <%- include ('partials/scripts') -%>

</body>

</html>